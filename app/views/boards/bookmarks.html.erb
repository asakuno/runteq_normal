<div class="container pt-3">
  <%= render 'search', url: bookmarks_boards_path %>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @bookmark_boards.present? %>
          <%= render @bookmark_boards %>
        <% else %>
          <p><%= (t"bookmarks.bookmarks.no_result")%></p>
        <% end %>
      </div>
      <%= paginate @bookmark_boards, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>
<% content_for(:title, t('.title')) %>
