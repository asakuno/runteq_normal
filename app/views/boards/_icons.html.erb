<ul class="list-inline justify-content-center" style="float: right;">
  <li class="list-inline-item">
    <%= link_to edit_board_path(board), id: "button-edit-#{board.id}" do%>
      <%= icon 'fa', 'pen' %>
    <% end %>
  </li>
  <li class="list-inline-item">
    <%= link_to board_path(board), id: "button_delete-#{board.id}", data: { confirm: (t"defaults.message.delete_confirm") }, method: :delete do %>
      <%= icon 'fas', 'trash' %>
    <% end %>
  </li>
</ul>